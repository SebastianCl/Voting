@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.png" alt="Banner 1" class="img-responsive" style="width:1024px;height:500px;max-width: 100%;" />
            @if (!this.User.Identity.IsAuthenticated)
            {
                <br /><br /><br /><br /><br />
                <div class="carousel-caption" role="option">
                    <h1 style="color:black;">
                        Sign in to create your own voting events
                        <br />
                        <a class="btn btn-warning btn-block" href="../Account/Login">
                            <i class="fa fa-user-circle"></i>
                            LOGIN
                        </a>
                    </h1>
                </div>
            }
        </div>
        <div class="item">
            <img src="~/images/banner2.png" alt="Banner 2" class="img-responsive" style="width:1024px;height:500px;max-width: 100%; " />
            @if (!this.User.Identity.IsAuthenticated)
            {
                <br /><br /><br /><br /><br /><br />
                <div class="carousel-caption" role="option">
                    <h1 style="color:black;">
                        Start voting and create your own surveys
                        <br />
                        <a class="btn btn-warning btn-block" href="../Account/Register">
                            <i class="fa fa-user-plus"></i>
                            JOIN
                        </a>
                    </h1>
                </div>
            }
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


