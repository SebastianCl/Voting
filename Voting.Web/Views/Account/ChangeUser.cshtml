@model Voting.Web.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "Register";
}
<h2>Update User</h2>
<br />
<div class="row">
    
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="col-md-6 offset-md-6">
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="Occupation">Occupation</label>
                <input asp-for="Occupation" class="form-control" />
                <span asp-validation-for="Occupation" class="text-warning"></span>
            </div>

        </div>
        <div class="col-md-6 offset-md-6">

            <div class="form-group">
                <label asp-for="Stratum">Stratum</label>
                <input asp-for="Stratum" class="form-control" min="0" />
                <span asp-validation-for="Stratum" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender">Gender</label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="CityId">City</label>
                <input asp-for="CityId" class="form-control" min="0" />
                <span asp-validation-for="CityId" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="Birthdate" class="control-label"></label>
                <input asp-for="Birthdate" class="form-control" />
                <span asp-validation-for="Birthdate" class="text-warning"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Update</button>
            <a asp-action="ChangePassword" class="btn btn-success"><i class="fa fa-lock"></i> Change Password</a>
        </div>
        <div class="text-success">@ViewBag.UserMessage</div>
    </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}